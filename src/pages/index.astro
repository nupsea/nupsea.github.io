---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get latest 3 blog posts
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);

const talks = [
  {
    title: "Building an AI Agent: Bookmate",
    event: "Tech Talk",
    date: "2025",
    link: "https://youtu.be/ELKLjiJHgzM?si=hfVWZ9d0mOaokqLt"
  }
];

const featuredProjects = [
  {
    name: "Doc-Mate",
    description: "Intelligent document assistant powered by GenAI and RAG.",
    link: "https://github.com/nupsea/doc-mate"
  },
  {
    name: "Content-Pal",
    description: "RAG-style streaming content assistant for films and availability.",
    link: "https://github.com/nupsea/content-pal"
  },
  {
    name: "Flink Score Publisher",
    description: "Real-time T20 match updates from Flink to Redis.",
    link: "https://github.com/nupsea/flink-score-pub"
  }
];
---

<Layout>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-6xl">
          Anup Sethuram
        </h1>
        <p class="mt-6 text-xl leading-8 text-slate-600">
          Building scalable data systems and exploring Generative AI.
        </p>
        <div class="mt-10 flex items-center gap-x-6">
          <a
            href="/projects"
            class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
          >
            My Projects
          </a>
          <a href="/blog" class="text-sm font-semibold leading-6 text-slate-900">
            Read Blog <span aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Content Grid (Blogs & Talks) -->
  <div class="bg-slate-50 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        
        <!-- Recent Blogs -->
        <div>
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold tracking-tight text-slate-900">Recent Writing</h2>
            <a href="/blog" class="text-sm font-semibold text-blue-600 hover:text-blue-500">View all &rarr;</a>
          </div>
          <div class="space-y-8">
            {posts.map((post) => (
              <article class="relative isolate flex flex-col gap-2 lg:flex-row">
                <div>
                  <div class="flex items-center gap-x-4 text-xs">
                    <time datetime={post.data.pubDate.toISOString()} class="text-slate-500">
                      {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
                    </time>
                  </div>
                  <h3 class="mt-2 text-lg font-semibold leading-6 text-slate-900 group-hover:text-slate-600">
                    <a href={`/blog/${post.slug}/`}>
                      <span class="absolute inset-0"></span>
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="mt-2 text-sm leading-6 text-slate-600">{post.data.description}</p>
                </div>
              </article>
            ))}
          </div>
        </div>

        <!-- Recent Talks -->
        <div>
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl font-bold tracking-tight text-slate-900">Talks</h2>
            <a href="/talks" class="text-sm font-semibold text-blue-600 hover:text-blue-500">View all &rarr;</a>
          </div>
          <div class="space-y-8">
            {talks.map((talk) => (
              <div class="relative bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:shadow-md transition-shadow">
                <h3 class="text-lg font-semibold text-slate-900">
                  <a href={talk.link} target="_blank">
                    <span class="absolute inset-0"></span>
                    {talk.title}
                  </a>
                </h3>
                <div class="mt-2 flex items-center text-sm text-slate-500">
                  <span class="font-medium text-slate-900 mr-2">{talk.event}</span>
                  &bull;
                  <span class="ml-2">{talk.date}</span>
                </div>
                <div class="mt-4 flex items-center text-sm font-medium text-blue-600">
                  Watch Video 
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
                </div>
              </div>
            ))}
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Featured Projects Section -->
  <div class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">Featured Projects</h2>
        <p class="mt-2 text-lg leading-8 text-slate-600">
          A glimpse into some of my recent work.
        </p>
      </div>
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {featuredProjects.map((project) => (
          <article class="flex flex-col items-start justify-between">
            <div class="group relative">
              <h3 class="mt-3 text-lg font-semibold leading-6 text-slate-900 group-hover:text-slate-600">
                <a href={project.link} target="_blank">
                  <span class="absolute inset-0"></span>
                  {project.name}
                </a>
              </h3>
              <p class="mt-5 line-clamp-3 text-sm leading-6 text-slate-600">{project.description}</p>
            </div>
          </article>
        ))}
      </div>
      <div class="mt-12">
        <a href="/projects" class="text-sm font-semibold leading-6 text-blue-600 hover:text-blue-500">
          View all projects <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </div>
</Layout>