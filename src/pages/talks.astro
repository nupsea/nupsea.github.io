---
import Layout from '../layouts/Layout.astro';

const talks = [
  {
    title: "Bookmate: Building an AI Assistant",
    event: "DataEngBytes Brisbane",
    date: "Nov 2025",
    description: "A deep dive into building Bookmate, an intelligent book recommendation assistant powered by GenAI.",
    link: "https://youtu.be/ELKLjiJHgzM?si=hfVWZ9d0mOaokqLt",
    presentation: "/talks/bookmate.pdf",
    type: "Video & Presentation"
  },
  {
    title: "Realtime Chase Prediction",
    event: "DataEngBytes Brisbane",
    date: "Apr 2025",
    description: "Architecting and building a real-time chase prediction engine using Apache Flink for high-throughput data streams.",
    link: "/talks/realtime-chase-prediction.pdf",
    type: "Presentation"
  },
  {
    title: "Intro to Flink",
    event: "Data & Analytics Wednesday Sydney",
    date: "Apr 2021",
    description: "A comprehensive introduction to Apache Flink, stream processing concepts, and building robust real-time data systems.",
    link: "/talks/intro-to-flink.pdf",
    type: "Presentation"
  },
  {
    title: "Airflow for Data Pipelines",
    event: "MeasureCamp Sydney",
    date: "Oct 2019",
    description: "Leveraging Apache Airflow for robust orchestration and management of complex data engineering pipelines.",
    link: "/talks/airflow-data-pipelines.pdf",
    type: "Presentation"
  }
];
---

<Layout>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-16 text-center">
      <h1 class="text-4xl font-extrabold text-slate-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
        Talks & Presentations
      </h1>
      <p class="mt-5 max-w-xl mx-auto text-xl text-slate-500">
        Sharing knowledge on GenAI, Data Engineering, and System Design.
      </p>
    </header>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {talks.map((talk) => (
        <div class="group relative bg-white border border-slate-200 rounded-2xl p-8 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between mb-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              {talk.type}
            </span>
            <span class="text-sm text-slate-500">{talk.date}</span>
          </div>
          <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-600 transition-colors">
            {talk.title}
          </h3>
          <p class="mt-2 text-sm text-slate-500 font-medium">{talk.event}</p>
          <p class="mt-4 text-slate-600 leading-relaxed">
            {talk.description}
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <a
              href={talk.link}
              target="_blank"
              class="inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500"
            >
              {talk.type.includes('Video') ? 'Watch Video' : 'View Presentation'}
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
            {talk.presentation && (
              <a
                href={talk.presentation}
                target="_blank"
                class="inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-500"
              >
                View Slides
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
